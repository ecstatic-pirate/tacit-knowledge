        function shareReport(title) {
            const content = `
                <div style="display: grid; gap: 1rem;">
                    <div>
                        <label style="display: block; font-weight: 600; margin-bottom: 0.5rem; font-size: 0.9rem; text-transform: uppercase;">Share With</label>
                        <input type="text" placeholder="Enter email addresses..." style="width: 100%; padding: 0.75rem; border: 1px solid #e5e7eb; border-radius: 4px; font-family: inherit;">
                    </div>
                    <div>
                        <label style="display: block; font-weight: 600; margin-bottom: 0.5rem; font-size: 0.9rem; text-transform: uppercase;">Message</label>
                        <textarea style="width: 100%; padding: 0.75rem; border: 1px solid #e5e7eb; border-radius: 4px; font-family: inherit; min-height: 80px;" placeholder="Add a message..."></textarea>
                    </div>
                    <div style="display: flex; gap: 1rem;">
                        <button onclick="showToast('Report shared successfully!'); closeModal();" style="padding: 0.75rem 1.5rem; background: #0f3a7d; color: white; border: none; border-radius: 4px; font-weight: 600; cursor: pointer; flex: 1;">Send</button>
                        <button onclick="closeModal();" style="padding: 0.75rem 1.5rem; background: #f3f4f6; color: #111827; border: 1px solid #e5e7eb; border-radius: 4px; font-weight: 600; cursor: pointer; flex: 1;">Cancel</button>
                    </div>
                </div>
            `;
            openModal(`Share "${title}"`, content);
        }

        function exportReport(title, format = null) {
            if (!format) {
                const content = `
                    <div style="display: grid; gap: 1rem;">
                        <button onclick="exportReport('${title}', 'pdf')" style="padding: 1rem; background: #f3f4f6; border: 1px solid #e5e7eb; border-radius: 4px; cursor: pointer; text-align: left; font-weight: 500; transition: all 0.3s; border-left: 3px solid transparent;" onmouseover="this.style.borderLeftColor='#0f3a7d'; this.style.backgroundColor='#f9fafb'" onmouseout="this.style.borderLeftColor='transparent'; this.style.backgroundColor='#f3f4f6'">üìÑ PDF</button>
                        <button onclick="exportReport('${title}', 'csv')" style="padding: 1rem; background: #f3f4f6; border: 1px solid #e5e7eb; border-radius: 4px; cursor: pointer; text-align: left; font-weight: 500; transition: all 0.3s; border-left: 3px solid transparent;" onmouseover="this.style.borderLeftColor='#0f3a7d'; this.style.backgroundColor='#f9fafb'" onmouseout="this.style.borderLeftColor='transparent'; this.style.backgroundColor='#f3f4f6'">üìä CSV</button>
                        <button onclick="exportReport('${title}', 'json')" style="padding: 1rem; background: #f3f4f6; border: 1px solid #e5e7eb; border-radius: 4px; cursor: pointer; text-align: left; font-weight: 500; transition: all 0.3s; border-left: 3px solid transparent;" onmouseover="this.style.borderLeftColor='#0f3a7d'; this.style.backgroundColor='#f9fafb'" onmouseout="this.style.borderLeftColor='transparent'; this.style.backgroundColor='#f3f4f6'">{ } JSON</button>
                        <button onclick="exportReport('${title}', 'xml')" style="padding: 1rem; background: #f3f4f6; border: 1px solid #e5e7eb; border-radius: 4px; cursor: pointer; text-align: left; font-weight: 500; transition: all 0.3s; border-left: 3px solid transparent;" onmouseover="this.style.borderLeftColor='#0f3a7d'; this.style.backgroundColor='#f9fafb'" onmouseout="this.style.borderLeftColor='transparent'; this.style.backgroundColor='#f3f4f6'">< > XML</button>
                    </div>
                `;
                openModal(`Export "${title}"`, content);
            } else {
                showToast(`Report exported as ${format.toUpperCase()}`, 'success');
                closeModal();
            }
        }

        // ============ PREPARE TAB ACTIONS ============
        function handleCreateCampaign() {
            const inputs = document.querySelectorAll('#prepare input, #prepare textarea');
            let allFilled = true;
            inputs.forEach(input => {
                if (!input.value && input !== inputs[inputs.length - 1]) {
                    allFilled = false;
                }
            });
            
            if (allFilled || inputs[0].value) {
                const personName = inputs[0].value || 'New Campaign';
                showToast(`Campaign "${personName}" created successfully!`, 'success');
            } else {
                showToast('Please fill in all required fields', 'warning');
            }
        }

        function handleUpdatePlan() {
            showToast('Interview plan updated successfully!', 'success');
        }

        function handleConfigureReporting() {
            showToast('Reporting configuration saved!', 'success');
        }

        // ============ INTERACTIVE BUTTONS WITH ONCLICK HANDLERS ============
        document.addEventListener('DOMContentLoaded', function() {
            // Handle all "View" report buttons
            const reportButtons = document.querySelectorAll('.report-card');
            reportButtons.forEach(card => {
                const viewBtn = Array.from(card.querySelectorAll('.btn')).find(btn => btn.textContent.includes('View'));
                const shareBtn = Array.from(card.querySelectorAll('.btn')).find(btn => btn.textContent.includes('Share'));
                const exportBtn = Array.from(card.querySelectorAll('.btn')).find(btn => btn.textContent.includes('Export'));
                const formatBtn = Array.from(card.querySelectorAll('.btn')).find(btn => btn.textContent.includes('Format'));
                const previewBtn = Array.from(card.querySelectorAll('.btn')).find(btn => btn.textContent.includes('Preview'));
                const deployBtn = Array.from(card.querySelectorAll('.btn')).find(btn => btn.textContent.includes('Deploy'));
                
                const reportTitle = card.querySelector('.report-title').textContent;
                
                if (viewBtn) viewBtn.onclick = () => viewReport(reportTitle);
                if (shareBtn) shareBtn.onclick = () => shareReport(reportTitle);
                if (exportBtn) exportBtn.onclick = () => exportReport(reportTitle);
                if (formatBtn) formatBtn.onclick = () => exportReport(reportTitle);
                if (previewBtn) previewBtn.onclick = () => viewReport(reportTitle);
                if (deployBtn) deployBtn.onclick = () => { showToast('Knowledge deployed to AI systems!', 'success'); };
            });

            // Handle campaign action buttons
            const campaignOverviews = document.querySelectorAll('.campaign-overview');
            campaignOverviews.forEach(overview => {
                const btns = overview.querySelectorAll('.btn');
                const moreDetailsBtn = Array.from(btns).find(btn => btn.textContent.includes('More'));
                const editBtn = Array.from(btns).find(btn => btn.textContent.includes('Edit'));
                
                const campaignName = overview.querySelector('.campaign-name').textContent;
                const campaignRole = overview.querySelector('.campaign-role').textContent;
                
                if (moreDetailsBtn) {
                    moreDetailsBtn.onclick = () => viewCampaignDetails(campaignName, campaignRole);
                }
                if (editBtn) {
                    editBtn.onclick = () => editCampaign(campaignName);
                }
            });

            // Handle Prepare tab buttons
            const buttons = document.querySelectorAll('.btn');
            buttons.forEach(btn => {
                if (btn.textContent.includes('Create Campaign')) {
                    btn.onclick = handleCreateCampaign;
                }
                if (btn.textContent.includes('Update Plan')) {
                    btn.onclick = handleUpdatePlan;
                }
                if (btn.textContent.includes('Configure Reporting')) {
                    btn.onclick = handleConfigureReporting;
                }
            });

            // Handle End Session button
            const endSessionBtn = document.querySelector('[onclick*="End Session"]');
            if (endSessionBtn) {
                endSessionBtn.onclick = handleEndSession;
            }

            // Handle View skills/interview link
            const viewSkillsLink = document.querySelector('a[href="#"]');
            if (viewSkillsLink && viewSkillsLink.textContent.includes('View skills')) {
                viewSkillsLink.onclick = (e) => {
                    e.preventDefault();
                    viewSkillsInterview();
                };
            }

            // Make task checkboxes interactive
            document.querySelectorAll('.checkbox').forEach(checkbox => {
                checkbox.style.cursor = 'pointer';
                checkbox.addEventListener('click', function(e) {
                    e.stopPropagation();
                    this.classList.toggle('checked');
                    const textElement = this.parentElement.querySelector('.checklist-text');
                    if (textElement) {
                        textElement.classList.toggle('done');
                    }
                    if (this.classList.contains('checked')) {
                        showToast('Task completed!', 'success');
                    }
                });
            });

            // Make open tasks checkboxes interactive
            const taskCheckboxes = document.querySelectorAll('input[type="checkbox"]');
            taskCheckboxes.forEach(checkbox => {
                checkbox.style.cursor = 'pointer';
                checkbox.addEventListener('change', function() {
                    if (this.checked) {
                        showToast('Task marked as done!', 'success');
                    }
                });
            });
        });
    </script>
</body>
</html>